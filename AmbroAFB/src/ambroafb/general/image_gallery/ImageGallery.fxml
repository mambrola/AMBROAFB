<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import ambro.*?>
<?import ambroafb.general.image_gallery.*?>


<VBox   fx:id="imagesGalleryRoot" 
        stylesheets="/styles/css/imagegallery.css"
        xmlns:fx="http://javafx.com/fxml/1" 
        xmlns="http://javafx.com/javafx/8"
        fx:controller="ambroafb.general.image_gallery.ImageGalleryController" >
    <children>
        <StackPane >
            <HBox fx:id="galleryImageFrame" >
                <ImageView fx:id="galleryImageView" preserveRatio="true"  >
                    <image>
                        <Image url="/images/default_profile_image.png" />
                    </image>
                </ImageView>
            </HBox>
            <ImageView fx:id="deletedImageView" fitWidth="100" fitHeight="100" visible="false" >    
                <image>
                    <Image url="/images/deleted.png" />
                </image>
            </ImageView>
            <org.controlsfx.control.MaskerPane fx:id="masker" visible="false" text="%loading"/>
        </StackPane>
        <HBox fx:id="imageButtonsHBox" >
            <children>
                <Button  fx:id="deleteOrUndo" onAction="#deleteImage" >
                    <graphic>
                        <ImageView  fitWidth="16" fitHeight="16" >
                            <image>
                                <Image url="/images/delete_128.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="upload" onAction="#uploadImage" >
                    <graphic>
                        <ImageView  fitWidth="16" fitHeight="16" >
                            <image>
                                <Image url="/images/upload_128.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="rotateToRight" onAction="#rotate" >
                    <graphic>
                        <ImageView fitWidth="16" fitHeight="16" >
                            <image>
                                <Image url="/images/rotate_128.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </children>
</VBox>
