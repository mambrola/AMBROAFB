<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<fx:root    fx:id="rootPane" 
            alignment="CENTER_LEFT" 
            stylesheets="/styles/css/mapeditor.css" 
            type="javafx.scene.layout.HBox" 
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
    <children>
        <HBox fx:id="itemPane" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="itemDescrip" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="delete">
                    <graphic>
                        <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/images/delete2.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="edit">
                    <graphic>
                        <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/images/edit2.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
</fx:root>
