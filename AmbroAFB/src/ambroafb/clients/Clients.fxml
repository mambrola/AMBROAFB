<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ambro.* ?>


<BorderPane id="formPane" stylesheets="/ambroafb/clients/clients.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ambroafb.clients.ClientsController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="menu-bar" >
            <children>
                <fx:include fx:id="exit" source="/ambroafb/general/exit_button/ExitButton.fxml"/>
                <Button fx:id="delete" onAction = "#enter">
                    <tooltip>
                        <Tooltip text="%delete" />
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="/images/delete2.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="edit" onAction = "#editClient">
                    <tooltip>
                        <Tooltip text="%edit" />
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="/images/edit2.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="view" onAction = "#viewClient">
                    <tooltip>
                        <Tooltip text="%view" />
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="/images/view.png" />
                        </ImageView>
                    </graphic>
                </Button>
                
                
                <SplitMenuButton fx:id="addClient" onAction="#addClient">
                    <tooltip>
                        <Tooltip text="%new" />
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0"  pickOnBounds="true" preserveRatio="true" >
                            <Image url="/images/new2.png" />
                        </ImageView>
                    </graphic>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#addBySample" >
                            <graphic>
                                <Label text="%add_by_sample">
                                    <tooltip>
                                        <Tooltip text="%new" />
                                    </tooltip>
                                    <graphic>
                                        <HBox  spacing="8" >
                                            <ImageView fitHeight="18.0" fitWidth="18.0"  pickOnBounds="true" preserveRatio="true">
                                                <Image url="/images/clone.png" />
                                            </ImageView>
                                            <Separator orientation="VERTICAL" />
                                        </HBox>
                                    </graphic>
                                </Label> 
                                
                            </graphic>
                        </MenuItem>
                    </items>
                </SplitMenuButton>
                
                <ToggleButton fx:id="refresh" onAction = "#refresh">
                    <tooltip>
                        <Tooltip text="%enter" />
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="/images/refresh.png" />
                        </ImageView>
                    </graphic>
                </ToggleButton>
            </children>
            <padding>
                <Insets bottom="3.0" left="10.0" top="3.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <!--<DialogPane fx:id="alert" styleClass="root"></DialogPane>-->
        <ATableView fx:id="table" initializer="ambroafb.clients.Client" styleClass="unicode" GridPane.columnIndex="4" GridPane.columnSpan="4" GridPane.rowIndex="1" />
    </center>
</BorderPane>
