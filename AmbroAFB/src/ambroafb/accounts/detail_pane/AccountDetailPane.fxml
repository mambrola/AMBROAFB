<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import ambro.* ?>

<fx:root    type="javafx.scene.layout.VBox"
            id="parentPane"
            styleClass="vContainer"
            stylesheets="/styles/css/AccountDetailPane.css"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="accountInfo"  style="-fx-background-color: gray;"/>
        <Label fx:id="balAccInfo"  style="-fx-background-color: black;"/>
        <Label fx:id="clientInfo"  style="-fx-background-color: blue;"/>
        <VBox styleClass="vContainer">
            <children>
                <HBox styleClass="hContainer" style="-fx-background-color: red;" >
                    <children>
                        <VBox>
                            <children>
                                <Label text="%end_date" />
                                <ADatePicker fx:id="endDate" />
                            </children>
                        </VBox>
                        <HBox HBox.hgrow="ALWAYS" style="-fx-background-color: green;" >
                            <children>
                                <VBox alignment="BOTTOM_CENTER" >
                                    <children>
                                        <Button fx:id="compute" >
                                            <graphic>
                                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                                    <Image url="/images/refresh.png" />
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                </VBox>
                                
                                <VBox alignment="CENTER" style="-fx-background-color: blue;" >
                                    <children>
                                        <Label />
                                        <Label text="%current_amount_remain" style="-fx-background-color: gray;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <VBox fx:id="currentDebitPane" HBox.hgrow="ALWAYS" style="-fx-background-color: green;" >
                            <children>
                                <Label text="%debit" />
                                <Label fx:id="currentDebitInfo" />
                            </children>
                        </VBox>
                        <VBox fx:id="currentCreditPane" HBox.hgrow="ALWAYS" style="-fx-background-color: green;" >
                            <children>
                                <Label text="%credit" />
                                <Label fx:id="currentCreditInfo" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <ATableView fx:id="accountEntries" initializer="ambroafb.accounts.detail_pane.AccountEntry" VBox.vgrow="ALWAYS" />
                <HBox styleClass="hContainer" style="-fx-background-color: green;">
                    <children>
                        <VBox>
                            <children>
                                <!--<Label text="%begin_date" />-->
                                <ADatePicker fx:id="beginDate"  />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" >
                            <children>
                                <Label text="%starting_amount_remain" style="-fx-background-color: red;"/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label fx:id="startingDebitInfo" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label fx:id="startingCreditInfo" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</fx:root>
