<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import ambro.* ?>
<?import ambroafb.general.okay_cancel.* ?>
<?import ambroafb.general.*?>
<?import ambroafb.countries.* ?>
<?import javafx.scene.image.*?>

<ambroafb.general.DialogPanel stylesheets="/styles/css/clientdialog.css" 
                        xmlns:fx="http://javafx.com/fxml/1" 
                        xmlns="http://javafx.com/javafx/8"
                        fx:controller="ambroafb.clients.dialog.ClientDialogController" >
    <VBox fx:id="formPane">
        <children>
            <VBox>
                <children>
                    <Label text="%date" /> 
                    <ADatePicker fx:id="openDate" />
                </children> 
            </VBox>
            <HBox>
                <children>
                    <CheckBox fx:id="juridical" userData="aa" text="%juridical" /> 
                </children> 
            </HBox>
            <HBox styleClass="w3" >
                <children>
                    <VBox >
                        <Label fx:id="first_name" text="%first_name" styleClass="validationMessage" /> 
                        <TextField fx:id="firstName" />
                    </VBox>
                    <VBox >
                        <Label fx:id="last_name" text="%last_name" styleClass="validationMessage" /> 
                        <TextField fx:id="lastName" />
                    </VBox >
                    <VBox >
                        <Label text="%id_number" styleClass="validationMessage" /> 
                        <TextField fx:id="idNumber" />
                    </VBox>
                </children>
            </HBox>
            <HBox  styleClass="w3" >
                <children>
                    <VBox >
                        <Label text="%email" styleClass="validationMessage" /> 
                        <TextField fx:id="email" />
                    </VBox >
                    <VBox fx:id="phonesContainer">
                        <Label text="%phones" /> 
                    </VBox >
                    <VBox >
                        <Label text="%fax" /> 
                        <TextField fx:id="fax" />
                    </VBox >
                </children>
            </HBox>
            <HBox   styleClass="w1">
                <children>
                    <VBox >
                        <Label text="%address" styleClass="validationMessage" /> 
                        <TextField  fx:id="address" />
                    </VBox >
                </children>
            </HBox>
            <HBox   styleClass="w3">
                <children>
                    <VBox >
                        <Label text="%zip_code" /> 
                        <TextField fx:id="zipCode" />
                    </VBox>
                    <VBox >
                        <Label text="%city" /> 
                        <TextField fx:id="city" styleClass="w3" />
                    </VBox>
                    <VBox >
                        <Label text="%country" /> 
                        <CountryComboBox fx:id="country"/>
                    </VBox>
                </children>
            </HBox>
            <HBox styleClass="w3" >
                <children>
                    <CheckBox fx:id="rezident" text="%rezident" />
                    <Region HBox.hgrow="ALWAYS"  />
                    <VBox >
                        <Label text="%client_status" /> 
                        <ComboBox fx:id="status" />
                    </VBox>
                </children>
            </HBox>
            <HBox fx:id="bottomHbox" styleClass="doubleHeight"  >
                <children>
                    <VBox fx:id="imageVbox" >
                        <children>
                            <HBox fx:id="profileImageFrame" >
                                <ImageView fx:id="profImageView" >    
                                    <image>
                                        <Image url="/images/default_profile_image.png" />
                                    </image>
                                </ImageView>
                            </HBox>
                            
                            <HBox fx:id="imageButtonsHBox" >
                                <children>
                                    <Button fx:id="delete" styleClass="middle" onAction="#deleteImage" >
                                        <graphic>
                                            <ImageView fitWidth="16" fitHeight="16" >
                                                <image>
                                                    <Image url="/images/delete2.png" />
                                                </image>
                                            </ImageView>
                                        </graphic>
                                    </Button>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="upload" styleClass="middle" onAction="#uploadImage" >
                                        <graphic>
                                            <ImageView fitWidth="16" fitHeight="16" >
                                                <image>
                                                    <Image url="/images/upload.png" />
                                                </image>
                                            </ImageView>
                                        </graphic>
                                    </Button>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="rotateToRight" styleClass="middle" prefWidth="60" onAction="#rotate" >
                                        <graphic>
                                            <ImageView fitWidth="16" fitHeight="16" >
                                                <image>
                                                    <Image url="/images/rightRotate.png" />
                                                </image>
                                            </ImageView>
                                        </graphic>
                                    </Button>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <ANodeSlider fx:id="nodeSlider" /> 
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" /> 
                    <HBox fx:id="okCancelHbox" alignment="CENTER_RIGHT" spacing="30" >
                        <children>
                            <fx:include fx:id="okayCancel" source="/ambroafb/general/okay_cancel/DialogOkayCancel.fxml"/>
                        </children>
                    </HBox>
                </children>
            </HBox>
        </children>
    </VBox>
</ambroafb.general.DialogPanel>