<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import ambro.* ?>
<?import ambroafb.general.okay_cancel.* ?>
<?import ambroafb.general.*?>
<?import ambroafb.countries.* ?>

<ambroafb.general.DialogPanel stylesheets="/styles/css/clientdialog.css" 
                        xmlns:fx="http://javafx.com/fxml/1" 
                        xmlns="http://javafx.com/javafx/8"
                        fx:controller="ambroafb.clients.dialog.ClientDialogController" >
    <VBox fx:id="formPane">
        <children>
            <VBox>
                <children>
                    <Label text="%date" /> 
                    <ADatePicker fx:id="openDate" />
                </children> 
            </VBox>
            <HBox>
                <children>
                    <CheckBox fx:id="juridical" userData="aa" /> 
                    <Label text="%juridical" />
                </children> 
            </HBox>
            <HBox styleClass="w3" >
                <children>
                    <VBox >
                        <Label fx:id="first_name" text="%first_name" /> 
                        <TextField fx:id="firstName" />
                    </VBox>
                    <VBox >
                        <Label fx:id="last_name" text="%last_name" /> 
                        <TextField fx:id="lastName" />
                    </VBox >
                    <VBox >
                        <Label text="%id_number" /> 
                        <TextField fx:id="idNumber" />
                    </VBox>
                </children>
            </HBox>
            <HBox  styleClass="w3" >
                <children>
                    <VBox >
                        <Label text="%email" /> 
                        <TextField fx:id="email" />
                        <Label styleClass="patterValidatorExplain" text="" visible="false" />
                    </VBox >
                    <VBox fx:id="phonesContainer">
                        <Label text="%phones" /> 
                    </VBox >
                    <VBox >
                        <Label text="%fax" /> 
                        <TextField fx:id="fax" />
                    </VBox >
                </children>
            </HBox>
            <HBox   styleClass="w1">
                <children>
                    <VBox >
                        <Label text="%address" /> 
                        <TextField  fx:id="address" />
                    </VBox >
                </children>
            </HBox>
            <HBox   styleClass="w3">
                <children>
                    <VBox >
                        <Label text="%zip_code" /> 
                        <TextField fx:id="zipCode" />
                    </VBox>
                    <VBox >
                        <Label text="%city" /> 
                        <TextField fx:id="city" styleClass="w3" />
                    </VBox>
                    <VBox >
                        <Label text="%country" /> 
                        <!--<ComboBox fx:id="country" promptText="%select" />-->
                        <CountryComboBox fx:id="country"/>
                    </VBox>
                </children>
            </HBox>
            <HBox>
                <children>
                    <CheckBox fx:id="rezident" /> 
                    <Label text="%rezident" />
                </children> 
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="30" styleClass="doubleHeight">
                <fx:include fx:id="okayCancel" source="/ambroafb/general/okay_cancel/DialogOkayCancel.fxml"/>
            </HBox>
        </children>
    </VBox>
</ambroafb.general.DialogPanel>
