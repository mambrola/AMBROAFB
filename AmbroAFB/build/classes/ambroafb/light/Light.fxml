<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane prefWidth="1200" 
            styleClass="communal" 
            stylesheets="/ambroafb/light/light.css"  
            fx:controller="ambroafb.light.LightController" 
            xmlns:fx="http://javafx.com/fxml/1" >
    <top>
        <GridPane fx:id="top" gridLinesVisible="true" >
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>
            <padding>
                <Insets top="10.0" left="10.0" right="10.0" bottom="10.0"  />
            </padding>
            <children>
                <HBox spacing="2" GridPane.halignment="LEFT" >
                    <Label text="%date" />
                    <DatePicker fx:id="recordDate" /> 
                </HBox>
                <ComboBox promptText="%choose_operation_type" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:id="payment" fx:value="%payment" />
                            <String fx:id="accrual" fx:value="%accrual_with_VAT" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </children>
        </GridPane>
        
    </top>
    
    
    

</BorderPane>
